# PostgreSQL
POSTGRES_USER=secondlayer
POSTGRES_PASSWORD=secondlayer
POSTGRES_DB=secondlayer
POSTGRES_PORT=5432

# Service ports
API_PORT=3800
INDEXER_PORT=3700

# Worker configuration
WORKER_CONCURRENCY=5
WORKER_REPLICAS=1

# Logging
LOG_LEVEL=info

# Email (for magic link auth)
RESEND_API_KEY=
EMAIL_FROM=Second Layer <noreply@secondlayer.tools>

# Networks
NETWORKS=mainnet

# Hiro API (self-hosted for backfill, or public with API key)
HIRO_API_URL=http://hiro-api:3999
HIRO_FALLBACK_URL=https://api.mainnet.hiro.so
HIRO_API_KEY=

# Bulk backfill settings
BACKFILL_INCLUDE_RAW_TX=true
BACKFILL_CONCURRENCY=20
BACKFILL_BATCH_SIZE=100
BACKFILL_RAW_TX_CONCURRENCY=10
