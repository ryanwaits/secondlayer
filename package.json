{
  "name": "secondlayer",
  "version": "0.0.0",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run build:types && bun run build:cli",
    "build:cli": "bun run --filter @secondlayer/cli build",
    "build:types": "bun run --filter @secondlayer/clarity-types build",
    "dev": "bun run --filter '*' dev",
    "test": "bun run --filter '*' test",
    "test:cli": "bun run --filter @secondlayer/cli test",
    "test:types": "bun run --filter @secondlayer/clarity-types test",
    "typecheck": "bun run --filter '*' typecheck",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "bunup": "^0.9.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18"
  }
}
